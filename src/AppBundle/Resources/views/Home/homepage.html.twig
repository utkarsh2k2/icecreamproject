{% extends '@App/layout.html.twig' %}

{% block content %}  
    <div class="container-fluid text-center">
        <div class="row bg-info">
            <h1>IceCream Shop</h1>
        </div>
        <br>
        <h3>Flavour Menu</h3>
        <br>
        <div class="row">
            <div class="col-lg-offset-4 col-lg-4">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th class="text-center">Flavor Name</th>
                            <th class="text-center">Cost per scoop in Rs</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for flavour,cost in flavourcosts %}
                            {% for name,id in flavours %}          
                                {% if id == flavour %}      
                                    <tr>
                                        <td>{{ name }}</td>
                                        <td>{{ cost }}</td>
                                    </tr>
                                {% endif %}      
                            {% endfor %}
                        {% endfor %} 
                    </tbody>
                </table>
            </div>
        </div>
        <br>
        <h3>Topping Menu</h3>
        <br>
        <div class="row">
            <div class="col-lg-offset-4 col-lg-4">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th class="text-center">Topping Name</th>
                            <th class="text-center">Cost in Rs</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for topping,cost in toppingcosts %}
                            {% for name,id in toppings %}           
                                {% if id == topping %}      
                                    <tr>
                                        <td>{{ name }}</td>
                                        <td>{{ cost }}</td>
                                    </tr>
                                {% endif %}      
                            {% endfor %}
                        {% endfor %} 
                    </tbody>
                </table>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-lg-offset-5 col-lg-2">
                <a href="{{ path('createorderpage') }}" class="btn btn-primary">Place Order</a>
            </div>
        </div>
        <br>
        <br>
    </div>
{% endblock %}    